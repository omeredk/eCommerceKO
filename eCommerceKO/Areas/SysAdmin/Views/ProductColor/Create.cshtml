@model ProductColor

<form method="post">

    <h2>Create a New Color</h2>
    <div class="row">
        <label asp-for="ProductColorName"></label>
        <input asp-for="ProductColorName" class="form-control" />
    </div>
    <div class="row my-2">
        <div class="col-6">
            <button type="submit" class="btn btn-primary">
                Save
            </button>
        </div>
        <div class="col-6"><a asp-controller="ProductColor" asp-action="Index" class="btn btn-primary"> Back To Main  </a></div>

    </div>
</form>
